@page "/balancesheet"

<h3>Balance Sheet</h3>

@if (balancesheet == null || !balancesheet.Any())
{
    <p>@(balancesheet == null ? "Loading..." : "No balance sheet data available.")</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            <tr><td>Assets</td><td>@balancesheet.First().Assets</td></tr>
            <tr><td>Liabilities</td><td>@balancesheet.First().Liabilities</td></tr>
            <tr><td>Equity</td><td>@balancesheet.First().Equity</td></tr>
        </tbody>
    </table>
}