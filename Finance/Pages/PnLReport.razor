@page "/pnlreport"

<h3>Profit & Loss Manager</h3>

<button class="btn btn-primary mb-3" @onclick="ShowCreateForm">Add PnL Entry</button>

@if (showCreateForm)
{
    <EditForm Model="@newPnL" OnValidSubmit="@AddPnL">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="form-group">
            <label>Revenue</label>
            <InputNumber class="form-control" @bind-Value="newPnL.Revenue" />
        </div>
        <div class="form-group">
            <label>Expenses</label>
            <InputNumber class="form-control" @bind-Value="newPnL.Expenses" />
        </div>
        <button class="btn btn-success" type="submit">Save</button>
        <button class="btn btn-secondary" @onclick="HideCreateForm" type="button">Cancel</button>
    </EditForm>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Revenue</th>
            <th>Expenses</th>
            <th>Net Profit</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in pnl)
        {
            <tr>
                <td>@entry.Revenue</td>
                <td>@entry.Expenses</td>
                <td>@entry.NetProfit</td>
                <td>
                    <button class="btn btn-info btn-sm" @onclick="() => ShowEditForm(entry)">Edit</button>
                    <button class="btn btn-danger btn-sm" @onclick="() => ConfirmDelete(entry)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (showEditForm)
{
    <EditForm Model="@editingPnL" OnValidSubmit="@UpdatePnL">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <button class="btn btn-success" type="submit">Update</button>
        <button class="btn btn-secondary" @onclick="HideEditForm" type="button">Cancel</button>
    </EditForm>
}

@if (showDeleteConfirm)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal show" style="display:block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header"><strong>Confirm Delete</strong></div>
                <div class="modal-body">Are you sure you want to delete this PnL entry?</div>
                <div class="modal-footer">
                    <button class="btn btn-danger" @onclick="DeletePnLConfirmed">Delete</button>
                    <button class="btn btn-secondary" @onclick="HideDeleteConfirm">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}